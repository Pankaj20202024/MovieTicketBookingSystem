<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/booking_fragment"
    tools:context=".Booking_Fragment"
    android:background="@drawable/piratesofthecarrabian"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/option_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/backButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/dark_blue"
                        android:textColor="@color/white"
                        android:text="Back to Home"
                        android:textStyle="bold"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/Silver_Seat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Silver Seat "
                        android:layout_margin="5dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/dark_blue"
                        android:textColor="@color/white"
                        />

                    <Button
                        android:id="@+id/Gold_Seat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gold Seat "
                        android:textSize="12dp"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/dark_blue"
                        android:textColor="@color/white"
                        />
                    <Button
                        android:id="@+id/Platinium_Seat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="platinum Seat "
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:backgroundTint="@color/dark_blue"
                        android:textColor="@color/white"
                        />

                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Silver_Seat_Booking_Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/option_container"
            >
            <FrameLayout
                android:id="@+id/bookingfragmentcontainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Golden_Seat_Booking_Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/option_container"
            android:visibility="gone"
            >
            <FrameLayout
                android:id="@+id/bookingfragmentcontainer2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Platinium_Seat_Booking_Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/option_container"
            android:visibility="gone"
            >
            <FrameLayout
                android:id="@+id/bookingfragmentcontainer3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
